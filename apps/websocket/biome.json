{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"root": true,

	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"!!**/dist"
		]
	},

	"linter": {
		"enabled": true,
		"rules": {}
	},

	"formatter": {
		"enabled": true
	},

	"assist": {
		"enabled": false
	}
}
