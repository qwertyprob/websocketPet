generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model IssueReport {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  status      IssueStatus  @default(OPEN)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  //Relations
  chat        Chat?
  attachments Attachment[]
}

model Attachment {
  id        Int         @id @default(autoincrement())
  file_name String
  file_path String      @unique
  file_type String?
  file_size Int?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now()) @updatedAt
  // Relations
  report    IssueReport @relation(fields: [reportId], references: [id])
  reportId  Int
}

model Chat {
  id        Int            @id @default(autoincrement())
  name      String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @default(now()) @updatedAt
  //Relations
  reportId  Int            @unique
  report    IssueReport    @relation(fields: [reportId], references: [id])
  messages  ChatMessages[]
}

model ChatMessages {
  id          Int      @id @default(autoincrement())
  message     String
  sender_role Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  //Relations
  chat        Chat     @relation(fields: [chat_id], references: [id])
  chat_id     Int
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum Role {
  USER
  ADMIN
}
